<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/chacal_color"
>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="20dp"
       >
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="10"
        android:columnCount="2">

    <com.appli.chacalprog.ComposantProduit
        android:id="@+id/produit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"/>


    <com.appli.chacalprog.ComposantProduit
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/produit2"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="fill"/>

    <com.appli.chacalprog.ComposantProduit
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/produit3"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"/>

    <com.appli.chacalprog.ComposantProduit
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/produit4"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill"/>

    <com.appli.chacalprog.ComposantProduit
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/produit5"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"/>

    <com.appli.chacalprog.ComposantProduit
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/produit6"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="fill"/>

    <com.appli.chacalprog.ComposantProduit
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/produit7"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill"/>

    <com.appli.chacalprog.ComposantProduit
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/produit8"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="fill"/>

    <com.appli.chacalprog.ComposantProduit
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/produit9"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill"/>

    <com.appli.chacalprog.ComposantProduit
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/produit10"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="fill"/>
</GridLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        >
    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >

        <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:columnCount="7"
            app:rowCount="2">



            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Total"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="0"
                app:layout_column="0"
              />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:text="0"
                android:id="@+id/totalVente"
                app:layout_row="1"
                app:layout_column="0"
            android:textColor="@color/brown"
            android:background="@drawable/back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text=" "
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="0"
                app:layout_column="1"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:text="+"
                app:layout_row="1"
                app:layout_column="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Don"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="0"
                app:layout_column="2"
                />


            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="1"
                app:layout_column="2"
                android:inputType="textPersonName"
                android:text="0"
                android:ems="10"
                android:id="@+id/don"
                android:textColor="@color/brown"
                android:background="@drawable/back"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text=" "
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="0"
                app:layout_column="3"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="1"
                app:layout_column="3"
                android:text="-"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Remise"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="0"
                app:layout_column="4"
               />


            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="1"
                app:layout_column="4"
                android:inputType="textPersonName"
                android:text="0 €"
                android:ems="10"
                android:id="@+id/remise"
                android:textColor="@color/brown"
                android:background="@drawable/back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text=" "
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="0"
                app:layout_column="5"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="1"
                app:layout_column="5"
                android:text="="
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="A régler"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="0"
                app:layout_column="6"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_row="1"
                app:layout_column="6"
                android:text="0 €"
                android:id="@+id/a_regler"
                android:textColor="@color/brown"
                android:background="@drawable/back"/>
        </android.support.v7.widget.GridLayout>


</RelativeLayout>
    </LinearLayout>

