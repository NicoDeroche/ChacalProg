<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="7"
    app:rowCount="2">


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Total"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_row="0"
        app:layout_column="0"
        app:layout_columnSpan="2"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="0 €"
        android:id="@+id/totalVente"
        app:layout_row="1"
        app:layout_column="0"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="+"
        app:layout_row="1"
        app:layout_column="1"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Don"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_row="0"
        app:layout_column="2"
        app:layout_columnSpan="2"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_row="1"
        app:layout_column="2"
        android:text="0 €"
        android:id="@+id/don"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_row="1"
        app:layout_column="3"
        android:text="-"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Remise"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_row="0"
        app:layout_column="4"
        app:layout_columnSpan="2"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_row="1"
        app:layout_column="4"
        android:text="0 €"
        android:id="@+id/remise"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_row="1"
        app:layout_column="5"
        android:text="="
       />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="A régler"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_row="0"
        app:layout_column="6"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_row="1"
        app:layout_column="6"
        android:text="0 €"
        android:id="@+id/a_regler"/>
</android.support.v7.widget.GridLayout>

